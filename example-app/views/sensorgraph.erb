<!DOCTYPE HTML>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Ardtweeno Node: <%= ourName %> Sensor Graph</title>
  
    <link href="/css/ardtweeno-gateway.css" rel="stylesheet" media="screen">
    <script type="text/javascript" src="/js/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/js/highstock.js"></script>
    <script type="text/javascript" src="/js/highcharts.js"></script>
                
  </head>
        
  <body>
  	<div>
  	  <a href="/gateway"><input class="control-panel-button" id="return-button" value="Return home"/></a>
  	</div>
    <script>
    
      $(document).ready(function() {
        var chart = new Highcharts.Chart({

        chart: {
          // Edit chart spacing
          spacingBottom: 50,
          spacingTop: 50,
          spacingLeft: 50,
          spacingRight: 50,

          // Explicitly tell the width and height of a chart
          width: 800,
          height: 600,
          renderTo: 'nodegraph',
          type: 'line'
        },
        title: {
          text: '<b><%= ourName %> Statistics</b>',
		  y: -20
        },
        xAxis: {
          title: {
          text: 'Time'
        },
          labels:{ rotation:270 },
          categories: [
            <%= ourGraphTimes %> // Our script outputs the times along the x-axis
          ]
        },
        yAxis: {
          title: {
            text: 'Sensor Data'
          }
        },
        series: [
          <%= ourGraphData %> // Our script outputs the sensor data here
        ],
      });
      });    
    </script>
    <div id="nodegraph" style="width:100%; height:600px;"></div>
    
  </body>
</html>